{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="container">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        <h2>Inscription</h2>

        {{ form_start(registrationForm, { 'attr': {'class': 'contact'}}) }}
            <label>E-mail<label>
            {{ form_row(registrationForm.email, { 'attr': {'placeholder': 'E-mail' , 'class': 'contact-input'}}) }}
            <label>Message<label>
            {{ form_row(registrationForm.message, { 'attr': {'placeholder': 'Message', 'class': 'contact-input' }}) }}


            <button type="submit" class="contact-btn">Envoyer</button>
        {{ form_end(registrationForm) }}
    
    </div>
    
{% endblock %}